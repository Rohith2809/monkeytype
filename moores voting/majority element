class Solution {
    public int majorityElement(int[] nums) {
        if (nums == null || nums.length == 0) {
            return -1;
        }

        int candidate = 0;
        int count = 0;

        // Find the potential candidate
        for (int num : nums) {
            if (count == 0) {
                candidate = num;
            }
            count += (num == candidate) ? 1 : -1;
        }

        // Verify if the candidate is the majority element
        int countCandidate = 0;
        for (int num : nums) {
            if (num == candidate) {
                countCandidate++;
            }
        }

        return (countCandidate > nums.length / 2) ? candidate : null;
    }
}
